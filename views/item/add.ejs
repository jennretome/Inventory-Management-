<div
  class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom"
>
  <h1 class="h2">Medicine</h1>
  <div class="btn-toolbar mb-2 mb-md 0">
    <div class="btn-group me-2">
      <button class="btn btn-sm btn-outline-secondary">?</button>
    </div>
  </div>
</div>

<div class="col py-3">
  <div class="row">
    <div class="col">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
          <li class="breadcrumb-item active">New Medicine</li>
        </ol>
      </nav>
    </div>
    <div class="col text-end fw-lighter">
      <b>ItemId</b>
    </div>
  </div>
</div>

<form action="/add" method="POST">

    <div class="col">
        <label for="itemId">ID</label>
        <input type="text" class="form-control" id="itemId" name="itemId" value="" placeholder="" required>
    </div>

    <div class="col">
        <label for="name">Name</label>
        <input type="text" class="form-control" id="name" name="name" value="" placeholder="" required>
    </div>

    <div class="row form-group mb-4">
      <div class="col">
        <label for="category">Category</label>
        <input type="text" class="form-control" id="category" name="category" value="" placeholder="" required>
    </div>

      <div class="col">
        <label for="quantity">Quantity</label>
        <input type="text" class="form-control" id="quantity" name="quantity" value="" placeholder="" required>
    </div>

      <div class="col">
        <label for="price">Price</label>
        <input type="text" class="form-control" id="price" name="price" value="" placeholder="" required>
    </div>

    <div class="row form-group mb-4">
      <div class="col">
        <label for="description">Description</label>
        <input type="text" class="form-control" id="description" name="description" value="" cols="30" rows="12" placeholder="" required>
      </div>

      <div class="form-group mb-4">
        <button type="submit" class="btn btn-primary">Add Medicine</button>
      </div>


  </form>
